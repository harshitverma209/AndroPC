<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActionSelectionActivity">

    <Button
        android:id="@+id/act_trackpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trackpad"
        android:padding="45dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mouse pad"
        android:padding="45dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/act_trackpad"
        android:id="@+id/mousepad"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="media control"
        android:padding="45dp"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/act_trackpad"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/media"/>
</androidx.constraintlayout.widget.ConstraintLayout>